doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Login - MKJ Electronics
    link(rel="stylesheet", href="../css/style.css")

  body
    header
      h1 MKJ Electronics
      nav
        a(href="/") Home
        a(href="/shop") Shop
        a(href="/profile") Profile
        a(href="/cart") Cart
        a(href="/about") About
        a(href="/faq") FAQ
        a(href="/login") Login

    main
      h1.Login-header Login
      form(action="/auth/login", method="POST")
        label(for="username")
          | Username:
          br
          input(type="text", name="username", required)
        br
        br
        label(for="password")
          | Password:
          br
          input(type="password", name="password", required)
        br
        br
        button(type="submit") Login

        br
        a(href="/register", class="btn-register") Register here
