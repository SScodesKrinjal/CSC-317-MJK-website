doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title MKJ Electronics - Cart
    link(rel="stylesheet", href="../css/style.css")
  body(class="cart-page")
    header
      div.logo
        h1 MKJ Electronics
      nav
        a(href="../index.html") Home
        a(href="../shop/shop.html") Shop
        a(href="../profile/profile.html") Profile
        a(href="cart.html" class="active") Cart
        a(href="../about/about.html") About
        a(href="../faq/faq.html") FAQ
        a(href="../login/login.html") Login

    main
      section.cart
        h2 Your Shopping Cart
        
        // If the cart is empty
        if cartItems.length === 0
          div.empty-cart
            p Your cart is currently empty.
            a(href="../shop/shop.html" class="cta-btn") Browse Products
        
        // If the cart has items
        else
          div.cart-items
            each item in cartItems
              div.cart-item
                img(src=`${item.imageUrl || '../images/laptop.png'}`, alt=item.name)
                div.item-details
                  h4= item.name
                  p Price: $#{item.NFTprice}
                  label Quantity:
                    input(type="number", value="1", min="1", name="quantity")
                  form(action="/cart/remove", method="POST")
                    input(type="hidden", name="cartId", value=item.cart_id)
                    button(type="submit", class="remove-btn") Remove

          div.cart-summary
            h3 Total: $#{total}
            a(href="../checkout/checkout.html" class="cta-btn") Proceed to Checkout

    footer
      div.footer-links
        a(href="../about/about.html") About Us
        a(href="../faq/faq.html") FAQ
        a(href="../contact/contact.html") Contact
      p &copy; 2025 MKJ Electronics

